<h2>New Recording Application</h2>

<% form_for(@recording_application) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tax_key %>
    <%= f.text_field :tax_key %>
  </p>
  <p>
    <%= f.label :record_number %>
    <%= f.text_field :record_number %>
  </p>
  <p>
    <%= f.label :incident_time %>
    <%= f.datetime_select :incident_time %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', recording_applications_path %>
